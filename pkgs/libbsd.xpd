name: libbsd
description: utility functions from BSD systems-shared library
version: 0.7.0

build-dependencies:
  - autotools-build
  - tl:c-compiler
  - tl:linker

dependencies:
  - tl:libc

files:
  md5-fcceb4e66fd448ca4ed42ba22a8babb0:
    url: http://libbsd.freedesktop.org/releases/libbsd-0.7.0.tar.xz

configure:
  ./configure --prefix=%(prefix)s

build:
  make -j%(jobs)s

install:
  make -j%(jobs)s install
