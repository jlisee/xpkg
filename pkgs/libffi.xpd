name: libffi
description: Foreign Function Interface library runtime
version: 3.1

build-dependencies:
  - autotools-build
  - tl:c-compiler
  - tl:linker

dependencies:
  - tl:libc

files:
  md5-f5898b29bbfd70502831a212d9249d10:
    url: ftp://sourceware.org/pub/libffi/libffi-3.1.tar.gz

configure:
  ./configure --prefix=%(prefix)s --disable-static

build:
  make -j%(jobs)s

install:
  make install
