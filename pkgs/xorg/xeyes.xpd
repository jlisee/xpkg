name: xeyes
description: Follow the mouse/SHAPE extension X demo
version: 1.1.1

build-dependencies:
  - autotools-build
  - tl:c-compiler
  - tl:linker

dependencies:
  - tl:libc
  - libx11
  - libxt
  - libxext
  - libxmu
  - libxrender

files:
  md5-a3035dcecdbdb89e864177c080924981:
    url: http://xorg.freedesktop.org/releases/individual/app/xeyes-1.1.1.tar.bz2

configure:
  ./configure --prefix=%(prefix)s

build:
  make -j%(jobs)s

install:
  make -j%(jobs)s install
