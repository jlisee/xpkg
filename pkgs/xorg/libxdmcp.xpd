name: libxdmcp
description: X11 Display Manager Control Protocol library
version: 1.1.1

build-dependencies:
  - autotools-build
  - tl:c-compiler
  - tl:linker

dependencies:
  - tl:libc
  - xproto

files:
  md5-b94af6cef211cf3ee256f7e81f70fcd9:
    url: http://xorg.freedesktop.org/releases/individual/lib/libXdmcp-1.1.1.tar.bz2

configure:
  ./configure --prefix=%(prefix)s --disable-static

build:
  make -j%(jobs)s

install:
  make -j%(jobs)s install
